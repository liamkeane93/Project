
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"

                android:background="@drawable/crokepark"
                android:padding="10dp"
        >


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Team"
            android:id="@+id/viewDatabase" android:layout_alignParentEnd="true"/>
    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewDatabase" android:layout_alignParentBottom="true">


        <EditText
                android:textSize="28sp"
                android:textColor= "#FFFFFF"
                android:id="@+id/editText"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="" android:layout_above="@+id/scrollView1" android:layout_alignParentStart="true">

            <requestFocus />
        </EditText>
    </ScrollView>

</RelativeLayout>